{
  "name": "mc-components",
  "version": "0.1.10",
  "main": "./lib/components/index.js",
  "author": "Bernabe Gonzalez <gobernabe@gmail.com>",
  "homepage": "https://bernabe9.github.io/mc-components",
  "dependencies": {
    "@masterclass/mastersass": "yankaindustries/mastersass",
    "classnames": "^2.2.5",
    "mc-sass-lib": "https://github.com/jesseocon/mc-sass-lib"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "rimraf dist",
    "build": "npm run build:js && npm run build:styles",
    "build:js": "NODE_ENV=production babel ./src --out-dir ./dist/js --ignore spec.js,test.js,stories.js",
    "prebuild:css": "node-sass src/styles/index.scss dist/styles/css/mastersass.css",
    "build:css": "postcss -r dist/styles/css/mastersass.css",
    "build:scss": "cpx -p './src/styles/**/*.scss' ./dist/styles/scss",
    "build:styles": "npm run build:scss && npm run build:css",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "prepublishOnly": "npm run build",
    "lint:js": "eslint src --color",
    "lint:style": "stylelint \"src/styles/**/*.scss\"",
    "lint": "npm run lint:js && npm run lint:style"
  },
  "devDependencies": {
    "@storybook/addon-backgrounds": "^3.4.5",
    "@storybook/addon-info": "^3.4.5",
    "@storybook/react": "^3.4.5",
    "@storybook/storybook-deployer": "^2.3.0",
    "autoprefixer": "^8.6.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "8.2.3",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-react": "7.7.0",
    "postcss": "^6.0.22",
    "postcss-cli": "^5.0.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-scripts": "1.1.4",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.3"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": "commonjs"
        }
      ],
      "react-app"
    ]
  }
}
