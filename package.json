{
  "name": "mc-components",
  "version": "0.4.0",
  "author": "Masterclass <engineering@masterclass.com>",
  "homepage": "https://github.com/yankaindustries/mc-components",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yankaindustries/mc-components/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "style": "dist/styles/css/mc-components.css",
  "sass": "dist/styles/scss/index.scss",
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "yarn build:assets && yarn build:js && yarn build:styles",
    "build:assets": "svgr ./src/assets/icons --out-dir ./src/components/Icons",
    "build:js": "babel ./src/components --out-dir ./dist --ignore '**/*.stories.js,**/*.test.js'",
    "build:css": "node-sass ./src/styles/index.scss | postcss > ./dist/styles.css",
    "build:css-vendor": "node-sass ./src/styles/libraries/_libraries.scss | postcss > ./dist/vendor.css",
    "build:styles": "yarn build:css && yarn build:css-vendor",
    "start": "start-storybook -p 9001 -c .storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build",
    "lint:js": "eslint ./src --color",
    "lint:style": "stylelint \"./src/styles/**/*.scss\" || echo \"Style lint failed.\"",
    "lint": "yarn lint:js && yarn lint:style",
    "preversion": "yarn lint",
    "version": "yarn build && git add -A .",
    "postversion": "git push origin develop && git push origin develop --tags && npm publish"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "classnames": "^2.2.5",
    "react-slick": "^0.23.1",
    "slick-carousel": "^1.8.1"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@masterclass/eslint-config": "yankaindustries/eslint-config-masterclass#1.0.2",
    "@storybook/addon-backgrounds": "^3.4.5",
    "@storybook/addon-info": "^3.4.5",
    "@storybook/addon-options": "^3.4.8",
    "@storybook/react": "^3.4.5",
    "@storybook/storybook-deployer": "^2.3.0",
    "@svgr/cli": "^2.2.0",
    "@svgr/webpack": "^2.1.1",
    "autoprefixer": "^8.6.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "8.2.3",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "eslint": "4.19.1",
    "eslint-plugin-import": "2.11.0",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "jsx-to-string": "^1.4.0",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.9.0",
    "postcss": "^6.0.22",
    "postcss-cli": "^5.0.0",
    "postcss-inline-svg": "^3.1.1",
    "postcss-loader": "^3.0.0",
    "prettier-eslint-cli": "^4.7.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-highlight": "^0.12.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.3",
    "url-loader": "^1.0.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint:js"
    ],
    "src/**/*.scss": [
      "yarn lint:style",
      "stylelint --fix",
      "git add"
    ]
  }
}
